{
    "ci": {
      "collect": {
        "url": ["http://localhost:8501"],
        "numberOfRuns": 3,
        "settings": {
          "chromeFlags": "--no-sandbox --headless"
        }
      },
      "assert": {
        "assertions": {
          "categories:performance": ["error", { "minScore": 0.15 }]
        }
      },
      "upload": {
        "target": "filesystem",
        "outputDir": "docs/quality/performance/lighthouse"
      }
    }
  }
  